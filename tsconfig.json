{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*", "**/*.ts", "**/*.tsx", "**/*.astro"],
  "exclude": ["dist"],
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@blog/*":["src/assets/images/blog/*"],
      "@guides/*":["src/assets/images/guides/*"],
      "@images/*":["src/assets/images/*"]
    }
  },
  "exclude": ["node_modules"]
}
